{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "declaration": true,           // Generate .d.ts files
    "declarationMap": true,        // (Optional) Generate .d.ts.map files
    "emitDeclarationOnly": false,  // Emit .d.ts along with .js files
    "outDir": "dist",              // Output directory for compiled files
    "esModuleInterop": true        // Ensure compatibility with CommonJS and ES modules
  },
  "include": ["src/**/*"],         // Include all source files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}
